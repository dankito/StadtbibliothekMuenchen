<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_search_results_height"
    >

    <ImageView
        android:id="@+id/imgvwMediaTypeIcon"
        android:layout_width="@dimen/list_item_search_results_icons_width"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
    />

    <TextView
        android:id="@+id/txtvwSearchResultMediaInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imgvwMediaTypeIcon"
        android:layout_toLeftOf="@+id/txtvwYear"
        android:layout_marginLeft="@dimen/list_item_search_results_media_info_margin_left"
        android:layout_marginRight="@dimen/list_item_search_results_media_info_margin_right"
        android:gravity="center_vertical"
    />

    <ImageView
        android:id="@+id/imgvwAvailabilityIcon"
        android:layout_width="@dimen/list_item_search_results_icons_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/txtvwYear"
    />

    <TextView
        android:id="@+id/txtvwYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
    />

</RelativeLayout>